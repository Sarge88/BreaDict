<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="468dp">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="#ffffff"
            android:collapseColumns="0">


        </TableLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:keepScreenOn="true">

        <Button
            android:id="@+id/colorize"
            android:layout_width="124dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="59dp"
            android:layout_marginRight="280dp"
            android:layout_marginBottom="148dp"
            android:onClick="colorize"
            android:text="Színezés"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="124dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="143dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="144dp"
            android:layout_marginBottom="149dp"
            android:onClick="search"
            android:text="Keresés"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/removeBtn"
            android:layout_width="124dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="274dp"
            android:layout_marginTop="57dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="150dp"
            android:onClick="removeWord"
            android:text="Szó törlés"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showGermanBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="214dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="205dp"
            android:onClick="collapseTable"
            android:text="Német szavak mutatása"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/addNewWord"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="200dp"
            android:layout_marginBottom="204dp"
            android:onClick="addNewWord"
            android:text="Új szó hozzáadása"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="396dp"
            android:layout_height="32dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="111dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="119dp"
            android:textAllCaps="false" />

    </RelativeLayout>


</LinearLayout>