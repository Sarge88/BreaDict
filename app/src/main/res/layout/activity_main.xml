<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="468dp">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="#ffffff"
            android:collapseColumns="0">


        </TableLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/colorize"
            android:layout_width="195dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="-1dp"
            android:layout_marginBottom="63dp"
            android:onClick="colorize"
            android:text="Színezés"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showGermanBtn"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="74dp"
            android:layout_marginRight="222dp"
            android:layout_marginBottom="0dp"
            android:onClick="collapseTable"
            android:text="Német szavak mutatása"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/addNewWord"
            android:layout_width="211dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="199dp"
            android:layout_marginBottom="63dp"
            android:onClick="addNewWord"
            android:text="Új szó hozzáadása"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="166dp"
            android:layout_height="26dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="88dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="14dp"
            android:textAllCaps="false" />

    </RelativeLayout>


</LinearLayout>